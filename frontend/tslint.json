{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "max-line-length": {
      "options": {
        "limit": 250
      }
    },
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "no-string-literal": false,
    "no-console": false,
    "no-var-requires": false,
    "no-empty": false
  }
}
